<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="3dp"
    android:background="@drawable/bgd"
    tools:context="com.iogroup.chms.app.Fragments.UnitSummery">

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginBottom="3dp"
                android:padding="7dp"
                android:background="@color/item_background"
                android:alpha=".7"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Chief Complaint and Primary Diagnosis"
                    android:layout_marginBottom="3dp"
                    android:textColor="@color/item_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:background="@color/divider_black"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"></LinearLayout>

                <TextView
                    android:id="@+id/CCAPD"
                    android:textColor="@color/item_black_color"
                    android:lines="3"
                    android:lineSpacingExtra="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="3dp"
                android:padding="7dp"
                android:background="@color/item_background"
                android:alpha=".7"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Final Diagnosis"
                    android:layout_marginBottom="3dp"
                    android:textColor="@color/item_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:background="@color/divider_black"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"></LinearLayout>

                <TextView
                    android:id="@+id/FD"
                    android:textColor="@color/item_black_color"
                    android:lines="3"
                    android:lineSpacingExtra="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="3dp"
                android:padding="7dp"
                android:background="@color/item_background"
                android:alpha=".7"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Medical and Surgical Procedures"
                    android:layout_marginBottom="3dp"
                    android:textColor="@color/item_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:background="@color/divider_black"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"></LinearLayout>

                <TextView
                    android:id="@+id/MASP"
                    android:textColor="@color/item_black_color"
                    android:lines="3"
                    android:lineSpacingExtra="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="3dp"
                android:padding="7dp"
                android:background="@color/item_background"
                android:alpha=".7"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Results of Paraclinical Examination"
                    android:layout_marginBottom="3dp"
                    android:textColor="@color/item_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:background="@color/divider_black"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"></LinearLayout>

                <TextView
                    android:id="@+id/ROPE"
                    android:textColor="@color/item_black_color"
                    android:lines="3"
                    android:lineSpacingExtra="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="3dp"
                android:padding="7dp"
                android:background="@color/item_background"
                android:alpha=".7"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Disease Progress"
                    android:layout_marginBottom="3dp"
                    android:textColor="@color/item_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:background="@color/divider_black"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"></LinearLayout>

                <TextView
                    android:id="@+id/DP2"
                    android:textColor="@color/item_black_color"
                    android:lines="3"
                    android:lineSpacingExtra="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="3dp"
                android:padding="7dp"
                android:background="@color/item_background"
                android:alpha=".7"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Patient Condition On Discharge"
                    android:layout_marginBottom="3dp"
                    android:textColor="@color/item_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:background="@color/divider_black"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"></LinearLayout>

                <TextView
                    android:id="@+id/PCOD"
                    android:textColor="@color/item_black_color"
                    android:lines="3"
                    android:lineSpacingExtra="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="3dp"
                android:padding="7dp"
                android:background="@color/item_background"
                android:alpha=".7"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Recommendations After Discharge"
                    android:layout_marginBottom="3dp"
                    android:textColor="@color/item_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:background="@color/divider_black"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"></LinearLayout>

                <TextView
                    android:id="@+id/RAD"
                    android:textColor="@color/item_black_color"
                    android:lines="3"
                    android:lineSpacingExtra="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/dr_name"
                    android:textColor="#999"
                    android:layout_gravity="center"
                    android:gravity="left|center_vertical"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:padding="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
